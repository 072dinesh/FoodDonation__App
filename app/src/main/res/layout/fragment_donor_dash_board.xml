<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.donor.DonorDashBoardFragment">

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/materialcardview"
      style="@style/MyCardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:minHeight="200dp"

      >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:paddingBottom="20dp">

          <TextView
              android:id="@+id/tv_card_donor_dashboard"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="TextView"
              android:textSize="22sp"
              android:textColor="?attr/colorPrimary"
              android:layout_marginStart="15sp"
              android:layout_marginTop="30sp"
              android:layout_marginEnd="8dp"
              android:lineHeight="28sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@id/tv_dash_board_donor_logout"
              android:fontFamily="@font/cherry_swash_bold"
              tools:text="Donor Name"
              />

          <ImageView
              android:id="@+id/tv_dash_board_donor_logout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="@id/tv_card_donor_dashboard"
              app:layout_constraintTop_toTopOf="@id/tv_card_donor_dashboard"
              app:layout_constraintEnd_toStartOf="@id/tv_dash_board_profile"
              android:layout_marginEnd="15dp"
              android:src="@drawable/ic_logout"/>

          <ImageView
              android:id="@+id/tv_dash_board_profile"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_marginEnd="20dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="@id/tv_card_donor_dashboard"
              app:layout_constraintTop_toBottomOf="@id/tv_card_donor_dashboard"
              android:src="@drawable/ic_profile_2"
              />

      </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_donor_dash_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/materialcardview">

        <TextView
            android:id="@+id/btn_dash_board_donor_recent_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingVertical="15dp"
            android:text="@string/recent"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/btn_dash_board_donor_history_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingVertical="15dp"
            android:text="@string/history"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

