<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_gravity="top"

     tools:context=".ui.tabs.ngo.recent.RecentNgoTabFragment">

 <androidx.recyclerview.widget.RecyclerView
     android:id="@+id/recyclerview"
     android:layout_width="0dp"
     android:layout_height="0dp"
     tools:itemCount="4"
     android:paddingBottom="200dp"
     android:clipToPadding="false"
     app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"

     tools:listitem="@layout/list_ngo_recent" />

 <ImageView
     android:id="@+id/flb_add_request"
     android:layout_width="70dp"
     android:layout_height="70dp"
     android:layout_marginEnd="30dp"
     android:layout_marginBottom="20dp"
     android:clickable="true"
     android:src="@drawable/ic_add_1"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent" />
 <TextView
     android:id="@+id/tv_data_note_found_recen_ngo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:fontFamily="@font/cherry_swash_bold"
     android:lineHeight="26sp"
     android:text="@string/no_recent_request_found"
     android:textSize="18sp"
     android:visibility="gone"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>



