<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.ngo.NgoDashBoardFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        style="@style/MyCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_light"
        android:minHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"

            >

            <TextView
                android:id="@+id/tv_card_ngo_dash_board"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/cherry_swash_bold"
                android:lineHeight="28sp"
                android:text="TextView"
                android:textColor="@color/purple_1"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/iv_dash_board_ngo_log_out"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Ngo Name" />

            <ImageView
                android:id="@+id/iv_dash_board_ngo_log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_logout"
                app:layout_constraintBottom_toBottomOf="@+id/tv_card_ngo_dash_board"
                app:layout_constraintEnd_toStartOf="@+id/iv_dash_board_ngo_profile_pic"
                app:layout_constraintTop_toTopOf="@+id/tv_card_ngo_dash_board" />

            <ImageView
                android:id="@+id/iv_dash_board_ngo_profile_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_profile_2"
                app:layout_constraintBottom_toBottomOf="@+id/tv_card_ngo_dash_board"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_card_ngo_dash_board" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

<!--    <com.google.android.material.tabs.TabLayout-->
<!--        android:id="@+id/tl_ngo_dash_board"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="8dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_marginEnd="8dp"-->

<!--        app:tabBackground="@drawable/tab_background"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/materialCardView"-->
<!--        app:tabIndicatorHeight="0dp">-->


<!--    </com.google.android.material.tabs.TabLayout>-->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_ngo_dash_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"

        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView">

        <TextView

            android:id="@+id/btn_dash_board_ngo_recent_tab"
            android:background="@drawable/btn_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent"

            android:paddingVertical="15dp"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_weight="1">

        </TextView>

        <TextView

            android:id="@+id/btn_dash_board_ngo_history_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_state"
            android:paddingVertical="15dp"
            android:textAlignment="center"

            android:text="@string/history"
            android:clickable="true"
            android:layout_weight="1">

        </TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>