<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground_2_foreground</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodDonationApp</item>

    </style>
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/MyCardViewOverlay</item>
    </style>

    <style name="MyCardViewOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>
    <style name="Button_Tabs_diasable" parent="TextAppearance.AppCompat">

        <item name="android:backgroundTint">@color/purple_light</item>
        <item name="android:textColor">@color/purple_1</item>
        <item name="android:buttonCornerRadius">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeColor">@color/purple_1</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="Button_Tabs_enable" parent="TextAppearance.AppCompat">

        <item name="android:backgroundTint">@color/purple_1</item>
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:buttonCornerRadius">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeColor">@color/purple_1</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>