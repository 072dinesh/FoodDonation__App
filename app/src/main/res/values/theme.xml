<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/md_theme_light_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground_2_foreground</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodDonationApp</item>

    </style>

<!--    card style-->
    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/MyCardViewOverlay</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
    </style>

    <style name="MyCardViewOverlay">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>


    <style name="Card_Form" parent="@style/Widget.MaterialComponents.CardView">
<!--        <item name="shapeAppearanceOverlay">@style/Card_Form_Overly</item>-->
        <item name="cornerFamily">rounded</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="cardElevation">5dp</item>

    </style>


    <style name="Text_Field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?attr/colorPrimary</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintAnimationEnabled">true</item>
    </style>







<!--    Tab style-->
    <style name="Button_Tabs_diasable" parent="TextAppearance.AppCompat">

        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:buttonCornerRadius">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="Button_Tabs_enable" parent="TextAppearance.AppCompat">

        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimaryContainer</item>
        <item name="android:buttonCornerRadius">20dp</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Button style-->

    <style name="Button_accept" parent="ThemeOverlay.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16dp</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>

    </style>
</resources>